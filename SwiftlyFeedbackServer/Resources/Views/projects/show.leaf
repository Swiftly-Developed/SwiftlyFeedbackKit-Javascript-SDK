#extend("layouts/dashboard"):
    #export("extraHead"):
    #endexport

    #export("main"):
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
        <a href="/admin/projects" class="hover:text-gray-700">Projects</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900">#(project.name)</span>
    </nav>

    <!-- Project Header -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-start justify-between">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl #(project.colorClass) flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                </div>
                <div>
                    <div class="flex items-center gap-3">
                        <h1 class="text-2xl font-bold text-gray-900">#(project.name)</h1>
                        #if(project.isArchived):
                        <span class="text-xs font-medium px-2 py-1 bg-gray-100 text-gray-600 rounded">Archived</span>
                        #endif
                    </div>
                    #if(project.description):
                    <p class="text-gray-600 mt-1">#(project.description)</p>
                    #endif
                </div>
            </div>

            <div class="flex items-center gap-2">
                #if(project.isAdmin):
                <a href="/admin/projects/#(project.id)/members"
                   class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                    Members
                </a>
                <button type="button" onclick="openEmailModal()"
                   class="inline-flex items-center gap-2 px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    Email Notifications
                </button>
                <a href="/admin/projects/#(project.id)/settings"
                   class="px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                    Settings
                </a>
                #endif
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- API Key Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="font-semibold text-gray-900 mb-4">API Key</h3>
            <div class="flex items-center gap-2">
                <code class="flex-1 px-3 py-2 bg-gray-100 rounded-lg text-sm font-mono text-gray-800 truncate">
                    #(project.apiKey)
                </code>
                <button onclick="navigator.clipboard.writeText('#(project.apiKey)'); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000)"
                        class="px-3 py-2 text-sm text-primary-600 hover:text-primary-700 font-medium">
                    Copy
                </button>
            </div>
            <p class="text-xs text-gray-500 mt-2">Use this key to authenticate SDK requests</p>
        </div>

        <!-- Stats Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="font-semibold text-gray-900 mb-4">Total Feedback</h3>
            <p class="text-4xl font-bold text-gray-900">#(feedbackCount)</p>
            <a href="/admin/feedback?project_id=#(project.id)"
               class="text-sm text-primary-600 hover:text-primary-500 mt-2 inline-block">
                View all feedback â†’
            </a>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <h3 class="font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-2">
                <a href="/admin/feedback?project_id=#(project.id)"
                   class="block px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors text-center">
                    View Feedback
                </a>
                <a href="/admin/analytics/users?project_id=#(project.id)"
                   class="block px-4 py-2 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors text-center">
                    View Users
                </a>
            </div>
        </div>
    </div>

    <!-- Feedback by Status -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mt-6">
        <h3 class="font-semibold text-gray-900 mb-4">Feedback by Status</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
            #for(status in feedbackByStatus):
            <a href="/admin/feedback?project_id=#(project.id)&status=#(status.status)"
               class="block p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors text-center">
                <div class="flex items-center justify-center gap-2 mb-2">
                    <span class="w-3 h-3 rounded-full #(status.colorClass)"></span>
                    <span class="text-sm font-medium text-gray-700">#(status.name)</span>
                </div>
                <p class="text-2xl font-bold text-gray-900">#(status.count)</p>
            </a>
            #endfor
        </div>
    </div>

    <!-- SDK Integration Guide -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mt-6">
        <h3 class="font-semibold text-gray-900 mb-4">SDK Integration</h3>
        <p class="text-gray-600 mb-4">Add SwiftlyFeedbackKit to your iOS/macOS app:</p>

        <div class="bg-gray-900 rounded-lg p-4 overflow-x-auto">
            <pre class="text-sm text-gray-300"><code>// In your App.swift or initial view
import SwiftlyFeedbackKit

FeedbackKit.configure(apiKey: "#(project.apiKey)")

// Show feedback list
FeedbackListView()

// Or submit feedback
SubmitFeedbackView()</code></pre>
        </div>

        <p class="text-sm text-gray-500 mt-4">
            See the <a href="https://github.com/Swiftly-Developed/SwiftlyFeedbackKit" target="_blank" class="text-primary-600 hover:underline">documentation</a> for more details.
        </p>
    </div>

    <!-- Email Notifications Modal -->
    <div id="email-modal" class="hidden fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-center justify-center min-h-screen px-4">
            <!-- Backdrop -->
            <div class="fixed inset-0 bg-black/60 transition-opacity" onclick="closeEmailModal()"></div>

            <!-- Modal -->
            <div class="relative bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md p-6">
                <h2 class="text-xl font-bold text-white mb-4">Email Notifications</h2>

                <!-- Description -->
                <div class="bg-gray-700/50 rounded-lg p-4 mb-6">
                    <p class="text-gray-300 text-sm">Choose which status changes trigger email notifications to feedback submitters and voters who opted in.</p>
                </div>

                <!-- Status Toggles -->
                <div class="mb-6">
                    <h3 class="text-white font-semibold mb-4">Notify when status changes to</h3>
                    <div class="space-y-3">
                        <!-- Approved -->
                        <div class="flex items-center justify-between py-2">
                            <div class="flex items-center gap-3">
                                <div class="w-6 h-6 rounded-full bg-blue-500/20 flex items-center justify-center">
                                    <svg class="w-4 h-4 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <span class="text-white">Approved</span>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="toggle-approved" class="sr-only peer" data-status="approved">
                                <div class="w-11 h-6 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-500"></div>
                            </label>
                        </div>

                        <!-- In Progress -->
                        <div class="flex items-center justify-between py-2">
                            <div class="flex items-center gap-3">
                                <div class="w-6 h-6 rounded-full bg-orange-500/20 flex items-center justify-center">
                                    <svg class="w-4 h-4 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                    </svg>
                                </div>
                                <span class="text-white">In Progress</span>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="toggle-in_progress" class="sr-only peer" data-status="in_progress">
                                <div class="w-11 h-6 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-500"></div>
                            </label>
                        </div>

                        <!-- Completed -->
                        <div class="flex items-center justify-between py-2">
                            <div class="flex items-center gap-3">
                                <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center">
                                    <svg class="w-4 h-4 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <span class="text-white">Completed</span>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="toggle-completed" class="sr-only peer" data-status="completed">
                                <div class="w-11 h-6 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-500"></div>
                            </label>
                        </div>

                        <!-- Rejected -->
                        <div class="flex items-center justify-between py-2">
                            <div class="flex items-center gap-3">
                                <div class="w-6 h-6 rounded-full bg-red-500/20 flex items-center justify-center">
                                    <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <span class="text-white">Rejected</span>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="toggle-rejected" class="sr-only peer" data-status="rejected">
                                <div class="w-11 h-6 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-red-500"></div>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="space-y-2 mb-4">
                    <button type="button" onclick="enableAll()" class="w-full px-4 py-2 text-gray-300 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-left">
                        Enable All
                    </button>
                    <button type="button" onclick="disableAll()" class="w-full px-4 py-2 text-white bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-left">
                        Disable All
                    </button>
                    <button type="button" onclick="finalStatesOnly()" class="w-full px-4 py-2 text-white bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-left">
                        Final States Only
                    </button>
                </div>

                <p class="text-gray-500 text-sm mb-6">Final states: Completed and Rejected</p>

                <!-- Actions -->
                <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-700">
                    <button type="button" onclick="closeEmailModal()" class="px-4 py-2 text-gray-300 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors">
                        Cancel
                    </button>
                    <button type="button" onclick="saveEmailSettings()" id="save-btn" class="px-6 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const projectId = '#(project.id)';
        let currentSettings = [];

        function openEmailModal() {
            document.getElementById('email-modal').classList.remove('hidden');
            loadEmailSettings();
        }

        function closeEmailModal() {
            document.getElementById('email-modal').classList.add('hidden');
        }

        async function loadEmailSettings() {
            try {
                const response = await fetch(`/admin/projects/${projectId}/email-settings`, {
                    credentials: 'same-origin'
                });
                if (response.ok) {
                    const data = await response.json();
                    currentSettings = data.emailNotifyStatuses || [];
                    updateToggles();
                }
            } catch (error) {
                console.error('Failed to load settings:', error);
            }
        }

        function updateToggles() {
            const statuses = ['approved', 'in_progress', 'completed', 'rejected'];
            statuses.forEach(status => {
                const toggle = document.getElementById(`toggle-${status}`);
                if (toggle) {
                    toggle.checked = currentSettings.includes(status);
                }
            });
        }

        function getSelectedStatuses() {
            const statuses = [];
            const toggles = document.querySelectorAll('[data-status]');
            toggles.forEach(toggle => {
                if (toggle.checked) {
                    statuses.push(toggle.dataset.status);
                }
            });
            return statuses;
        }

        function enableAll() {
            const toggles = document.querySelectorAll('[data-status]');
            toggles.forEach(toggle => toggle.checked = true);
        }

        function disableAll() {
            const toggles = document.querySelectorAll('[data-status]');
            toggles.forEach(toggle => toggle.checked = false);
        }

        function finalStatesOnly() {
            const toggles = document.querySelectorAll('[data-status]');
            toggles.forEach(toggle => {
                toggle.checked = (toggle.dataset.status === 'completed' || toggle.dataset.status === 'rejected');
            });
        }

        async function saveEmailSettings() {
            const saveBtn = document.getElementById('save-btn');
            saveBtn.textContent = 'Saving...';
            saveBtn.disabled = true;

            try {
                const statuses = getSelectedStatuses();
                const response = await fetch(`/admin/projects/${projectId}/email-settings`, {
                    method: 'POST',
                    credentials: 'same-origin',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ statuses: statuses })
                });

                if (response.ok) {
                    closeEmailModal();
                } else {
                    const errorText = await response.text();
                    console.error('Save failed:', response.status, errorText);
                    alert('Failed to save settings. Please try again.');
                }
            } catch (error) {
                console.error('Failed to save settings:', error);
                alert('Failed to save settings. Please try again.');
            } finally {
                saveBtn.textContent = 'Save';
                saveBtn.disabled = false;
            }
        }

        // Close modal on escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeEmailModal();
        });
    </script>
    #endexport
#endextend
