            <div class="animate-spin w-8 h-8 border-4 border-orange-500 border-t-transparent rounded-full mx-auto"></div>
            <p class="mt-4 text-white">Redirecting to checkout...</p>
        </div>
    </div>

    <script>
        // Price IDs from environment (passed from server)
        const PRICES = {
            pro: {
                monthly: '#(priceProMonthly)',
                yearly: '#(priceProYearly)'
            },
            team: {
                monthly: '#(priceTeamMonthly)',
                yearly: '#(priceTeamYearly)'
            }
        };

        let isYearly = false;

        function toggleBilling() {
            isYearly = !isYearly;
            const toggle = document.getElementById('billing-toggle');
            const monthlyLabel = document.getElementById('monthly-label');
            const yearlyLabel = document.getElementById('yearly-label');
            const proPrice = document.getElementById('pro-price');
            const proPeriod = document.getElementById('pro-period');
            const teamPrice = document.getElementById('team-price');
            const teamPeriod = document.getElementById('team-period');

            if (isYearly) {
                toggle.classList.add('active');
                monthlyLabel.classList.remove('text-white');
                monthlyLabel.classList.add('text-gray-400');
                yearlyLabel.classList.remove('text-gray-400');
                yearlyLabel.classList.add('text-white');

                proPrice.textContent = '$49.99';
                proPeriod.textContent = '/year';
                teamPrice.textContent = '$99.99';
                teamPeriod.textContent = '/year';
            } else {
                toggle.classList.remove('active');
                monthlyLabel.classList.add('text-white');
                monthlyLabel.classList.remove('text-gray-400');
                yearlyLabel.classList.add('text-gray-400');
                yearlyLabel.classList.remove('text-white');

                proPrice.textContent = '$4.99';
                proPeriod.textContent = '/month';
                teamPrice.textContent = '$9.99';
                teamPeriod.textContent = '/month';
            }
        }

        async function subscribe(plan) {
            const priceId = PRICES[plan][isYearly ? 'yearly' : 'monthly'];

            if (!priceId) {
                alert('Subscription pricing is not configured yet. Please contact support.');
                return;
            }

            document.getElementById('loading').classList.remove('hidden');

            try {
                const response = await fetch('/api/v1/subscriptions/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify({
                        price_id: priceId,
                        success_url: window.location.origin + '/admin/settings/subscription?success=subscribed',
                        cancel_url: window.location.origin + '/admin/settings/subscription?cancelled=true'
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.reason || 'Failed to create checkout session');
                }

                const data = await response.json();
                window.location.href = data.checkout_url;
            } catch (error) {
                document.getElementById('loading').classList.add('hidden');
                alert('Error: ' + error.message);
            }
        }
    </script>
