    <style>
        .plan-card {
            border: 2px dashed rgba(255, 255, 255, 0.2);
            background: rgba(30, 30, 40, 0.8);
        }
        .plan-card-popular {
            border: 2px solid #F59E0B;
        }
        .toggle-switch {
            position: relative;
            width: 56px;
            height: 28px;
            background: #4B5563;
            border-radius: 9999px;
            cursor: pointer;
            transition: background 0.3s;
        }
        .toggle-switch.active {
            background: #F59E0B;
        }
        .toggle-switch::after {
            content: '';
            position: absolute;
            width: 22px;
            height: 22px;
            background: white;
            border-radius: 50%;
            top: 3px;
            left: 3px;
            transition: transform 0.3s;
        }
        .toggle-switch.active::after {
            transform: translateX(28px);
        }
    </style>
    #endexport

