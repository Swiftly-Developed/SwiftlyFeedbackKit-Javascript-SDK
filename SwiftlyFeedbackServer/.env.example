# Feedback Kit Server - Environment Variables
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=swiftly_feedback

# =============================================================================
# Stripe
# =============================================================================
# Get your keys from https://dashboard.stripe.com/apikeys
# Use test mode keys for development (start with sk_test_)
STRIPE_SECRET_KEY=sk_test_your_test_key_here

# Webhook signing secret from https://dashboard.stripe.com/webhooks
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:8080/api/v1/webhooks/stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Price IDs from https://dashboard.stripe.com/products
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_test
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_test
STRIPE_PRICE_TEAM_MONTHLY=price_team_monthly_test
STRIPE_PRICE_TEAM_YEARLY=price_team_yearly_test
